    name = "gazelle",
    actual = "//tools:gazelle",
    tags = ["manual"],
)

py_library(
    name = "setup",
    testonly = True,
    srcs = [
        "setup.py",
    ],
    data = [
        "CHANGELOG.rst",
        "LICENSE.txt",
        "README.rst",
        "requirements.in",
        "version.bzl",
    ],
    visibility = ["//tests:__subpackages__"],
    deps = [
        "@req_compile_deps//setuptools",
    ],
)

